public class LiteralsDemo {
    public static void main(String[] args) {
        // Integer literals
        int decimal = 10;       // Decimal literal
        int octal = 012;        // Octal literal (starts with 0)
        int hex = 0xA;          // Hexadecimal literal (starts with 0x)
        int binary = 0b1010;    // Binary literal (starts with 0b)

 
        float floatLiteral = 10.5f; 
        double doubleLiteral = 10.5; 
        
        char charLiteral = 'A'; 
        char unicodeLiteral = '\u0041'; 
 
        String stringLiteral = "Hello, World!";  

        
        boolean trueLiteral = true;       
        boolean falseLiteral = false; 
        
        String nullLiteral = null;
        
        System.out.println("Integer Literals:");
        System.out.println("Decimal: " + decimal);
        System.out.println("Octal: " + octal);
        System.out.println("Hexadecimal: " + hex);
        System.out.println("Binary: " + binary);

        System.out.println("\nFloating-point Literals:");
        System.out.println("Float: " + floatLiteral);
        System.out.println("Double: " + doubleLiteral);

        System.out.println("\nCharacter Literals:");
        System.out.println("Character: " + charLiteral);
        System.out.println("Unicode: " + unicodeLiteral);

        System.out.println("\nString Literal:");
        System.out.println("String: " + stringLiteral);

        System.out.println("\nBoolean Literals:");
        System.out.println("True: " + trueLiteral);
        System.out.println("False: " + falseLiteral);

        System.out.println("\nNull Literal:");
        System.out.println("Null: " + nullLiteral);
    }
}



